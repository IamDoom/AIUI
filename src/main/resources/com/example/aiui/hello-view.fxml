<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="box" alignment="CENTER" prefHeight="302.0" prefWidth="428.0" spacing="20.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aiui.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ToggleButton fx:id="mode" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#onmodetoggle" style="-fx-background-color: black; -fx-border-color: white; -fx-text-fill: white;" text="lightmode" />

    <Label fx:id="welcomeText" style="-fx-text-fill: white;" />
    <Button fx:id="hello" onAction="#onHelloButtonClick" style="-fx-text-fill: white; -fx-background-color: black; -fx-border-color: white;" text="Hello!" />
</VBox>
