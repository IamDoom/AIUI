<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aiui.loginController">
    <children>
        <Pane fx:id="rightPane" layoutX="160.0" minHeight="480.0" minWidth="480.0" style="-fx-background-color: #174694;">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" layoutY="140.0" minHeight="50.0" minWidth="480.0" style = "-fx-font-family: Segoe UI;-fx-font-weight: Bold;-fx-font-size: 36px;-fx-text-fill: white;" text="LOGIN" />
                <TextField fx:id="Username" alignment="CENTER" layoutX="120.0" layoutY="215.0" onAction="#submitlogin" promptText="Username" style = "-fx-min-width: 240px;-fx-min-height: 24px;-fx-font-family: Segoe UI;-fx-background-color: white;-fx-background-radius: 4px;">
                    <font>
                        <Font name="Segoe UI" size="12.0" />
                    </font>
                </TextField>
                <PasswordField fx:id="Password" alignment="CENTER" layoutX="120.0" layoutY="250.0" onAction="#submitlogin" promptText="Password" style = "-fx-min-width: 240px;-fx-min-height: 24px;-fx-font-family:Segoe UI;-fx-background-color: white;-fx-background-radius: 4px;">
                    <font>
                        <Font name="Segoe UI" size="12.0" />
                    </font>
                </PasswordField>
                <Button fx:id="button" alignment="CENTER" contentDisplay="CENTER" layoutX="180.0" layoutY="327.0" mnemonicParsing="false" onAction="#submitlogin" style = "-fx-font-weight: bold;-fx-min-width: 120px;-fx-background-radius: 4px;-fx-background-color:  #5BC3F0;-fx-text-fill: white;-fx-transition: all 0.3s;-fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.3), 5, 0, 0, 1);" text="Log in" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI" size="12.0" />
                    </font>
                </Button>
                <Button fx:id="mode" alignment="CENTER" contentDisplay="CENTER" layoutX="180.0" layoutY="367.0" mnemonicParsing="false" style="-fx-font-weight: bold;-fx-min-width: 120px;-fx-background-radius: 4px;-fx-background-color:  #5BC3F0;-fx-text-fill: white;-fx-transition: all 0.3s;-fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.3), 5, 0, 0, 1);" text="Darkmode" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI" size="12.0" />
                    </font>
                </Button>
            </children>
        </Pane>
        <Pane fx:id="leftPane" minHeight="480.0" minWidth="160.0" style = "-fx-background-color: #5bc3f0;" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <ImageView fitHeight="81.0" fitWidth="160.0" layoutX="11.0" layoutY="200.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" smooth="false">
                    <image>
                        <Image url="@icons/fullLogo.png" />
                    </image>
                </ImageView>
            </children>
        </Pane>
    </children>
</AnchorPane>
